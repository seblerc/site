<style>
  /* Ãœst bar */
  .ust-bar {
    max-width: 1000px;
    margin: 30px auto 10px;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Bildirim sistemi */
  .bildirim-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .bildirim-icon {
    cursor: pointer;
    font-size: 22px;
  }

  .bildirim-badge {
    position: absolute;
    top: -3px;
    right: -3px;
    background-color: red;
    border-radius: 50%;
    width: 10px;
    height: 10px;
    display: none;
  }

  .bildirim-container.has-bildirim .bildirim-badge {
    display: inline-block;
  }

  .bildirim-container.has-bildirim::after {
    content: '';
    position: absolute;
    top: -2px;
    right: -2px;
    width: 10px;
    height: 10px;
    background: red;
    border-radius: 50%;
  }

  .bildirim-popup {
    display: none;
    position: absolute;
    top: 30px;
    right: 0;
    background: #f9f9f9;
    border: 1px solid #ccc;
    border-radius: 6px;
    width: 300px;
    z-index: 100;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    padding: 10px;
  }

  .bildirim-popup h4 {
    margin-top: 0;
  }

  .bildirim-popup ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .bildirim-popup li {
    padding: 6px 0;
    border-bottom: 1px solid #eee;
  }

  /* Duyuru kutusu */
  .duyuru-kutusu {
    max-width: 1000px;
    margin: 20px auto;
    background: #fffbe5;
    border: 1px solid #ffd700;
    border-radius: 8px;
    padding: 15px;
    font-family: Arial, sans-serif;
  }

  /* Haber listesi */
  .haber-listesi {
    max-width: 1000px;
    margin: 0 auto 50px;
    font-family: Arial, sans-serif;
  }

  .haber {
    display: flex;
    gap: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 25px;
    background: #fff;
    align-items: flex-start;
    min-height: 200px;
  }

  .haber img {
    width: 300px;
    height: 200px;
    border-radius: 5px;
    object-fit: cover;
    cursor: pointer;
  }

  .haber .icerik h3 {
  margin: 0 0 10px;
  font-size: 24px;
  font-family: 'Segoe UI', sans-serif;
  font-weight: 700; /* KalÄ±n */
  color: #1d1d1d;
}

  .haber .icerik p {
  font-size: 16px;
  font-family: 'Georgia', serif;
  font-weight: 400;
  color: #444;
  margin-bottom: 10px;
}

  .haber .icerik a {
    text-decoration: underline;
    color: #333;
  }

  /* Logo */
  .logo-container {
    position: absolute;
    top: 10px;
    left: 15px;
    z-index: 200;
  }

  .logo-container img {
  height: 60px;
  width: auto;
  transition: transform 0.2s ease;
  cursor: pointer;
}

  .logo-container img:hover {
    transform: scale(1.05);
  }

  /* Ãœst bilgi barÄ± */
  .bilgi-bar {
    background: #f0f0f0;
    font-family: Arial, sans-serif;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    padding: 6px 15px;
    gap: 15px;
    font-size: 14px;
    border-bottom: 1px solid #ccc;
  }

  .link-bar a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
    position: relative;
    transition: color 0.3s ease;
  }

  .link-bar a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 2px;
    background-color: #6c63ff;
    transition: width 0.3s ease;
  }

  .link-bar a:hover {
    color: #6c63ff;
  }

  .link-bar a:hover::after {
    width: 100%;
  }

  .bilgi-bar span {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .saat-kutu {
    background-color: #1d4f91;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
    font-weight: bold;
  }

  .yesil { color: green; }
  .kirmizi { color: red; }
</style>


